{
	"mcpServers": {
		"puppeteer": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-puppeteer"
			],
			"alwaysAllow": [
				"puppeteer_evaluate",
				"puppeteer_navigate",
				"puppeteer_screenshot",
				"puppeteer_click",
				"puppeteer_select",
				"puppeteer_hover"
			]
		}
	}
}